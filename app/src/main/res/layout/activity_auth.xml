<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/login_bg"
    tools:context=".AuthActivity" >

 <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom|center_horizontal"
        android:orientation="horizontal"
        tools:ignore="UselessParent">

        <TextView
            android:id="@+id/fullscreen_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:keepScreenOn="true"
            android:text="Taxi"
            android:textColor="#33b5e5"
            android:textSize="50sp"
            android:textStyle="bold"
            android:layout_above="@+id/etlgnemail"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="56dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:layout_marginRight="35dp"
            android:layout_marginLeft="35dp"
            android:ems="10"
            android:hint="Enter Email ID"
            android:id="@+id/etlgnemail"
            android:textColor="#33b5e5"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:layout_above="@+id/etlgnpass"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="18dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <EditText
            android:layout_width="match_parent"
            android:textColor="#33b5e5"

            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:hint="Enter Password"
            android:ems="10"
            android:id="@+id/etlgnpass"
            android:layout_gravity="center_vertical"
            android:layout_centerVertical="true"
            android:layout_alignLeft="@+id/etlgnemail"
            android:layout_alignStart="@+id/etlgnemail"
            android:layout_alignRight="@+id/etlgnemail"
            android:layout_alignEnd="@+id/etlgnemail" />


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="login"
            android:textColor="#7f2652"
            android:id="@+id/btnlogin"
            android:layout_marginTop="52dp"
            android:layout_below="@+id/etlgnpass"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="select your Car here"
            android:id="@+id/textView"
            android:textColor="#bea467"
            android:layout_above="@+id/etlgnemail"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="34dp" />

        <TextView
            android:id="@+id/tvreg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/textView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/btnlogin"
            android:layout_marginTop="21dp"
            android:text="New here? Sign up"
            android:gravity="center_horizontal"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#bea467" />

    </RelativeLayout>

</RelativeLayout>
